{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipDefaultLibCheck": true
   },
   "include": [
     "src/**/*.ts"
   ],
   "exclude": [
     "node_modules",
     ".vscode",
     "dist"
   ]
}